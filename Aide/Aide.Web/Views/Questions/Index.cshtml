@model IEnumerable<Aide.Api.Models.Question>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityKeyQuestionTypeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityKeyQuizzNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityKeyQuestionTypeNavigation.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityKeyQuizzNavigation.Titre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdentityKey">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdentityKey">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdentityKey">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
